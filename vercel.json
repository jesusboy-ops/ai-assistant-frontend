{
  "buildCommand": "cd spark-ai-assistant && npm run build",
  "outputDirectory": "spark-ai-assistant/dist",
  "installCommand": "cd spark-ai-assistant && npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://ai-assistant-backend-oqpp.onrender.com",
    "VITE_GEMINI_API_KEY": "@gemini_api_key",
    "VITE_AI_MODEL": "gemini-1.5-flash",
    "VITE_GOOGLE_CLIENT_ID": "@google_client_id"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}